#include <bits/stdc++.h>

using namespace std;

// Complete the countingValleys function below.
int countingValleys(int n, string s) {
    int vcount = 0, v=0,neg = 0,step=0;
    for(int i=0;i<n;i++){
        if(s[i] == 'U'){
            vcount++;
        }
        else if(s[i] == 'D'){
            vcount--;
        }
        if(vcount == 0&&neg){
            step++;
            neg = 0;
        }
        else if(vcount<0){
            neg=1;
        }
    }
    if(step>0){
        return step;
    }
    else if(!step && neg){
        return 1;
    }
    return 0;

}

int main()
{
    ofstream fout(getenv("OUTPUT_PATH"));

    int n;
    cin >> n;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');

    string s;
    getline(cin, s);

    int result = countingValleys(n, s);

    fout << result << "\n";

    fout.close();

    return 0;
}
